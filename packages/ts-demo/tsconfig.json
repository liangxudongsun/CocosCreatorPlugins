{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    // 监听ts编译
    "watch": false,
    "sourceMap": true,
    "outDir": "./build",
    "experimentalDecorators": true,
    // 是否在表达式和声明上有隐含的any类型时报错
    "noImplicitAny": false,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": [],
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "./node_modules/vue/types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
